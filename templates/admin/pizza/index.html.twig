{% extends 'base.html.twig' %}

{% block title %}Pizza index{% endblock %}

{% block body %}
    <h1>Pizza index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>Picture</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pizza in pizzas %}
            <tr>
                <td>{{ pizza.id }}</td>
                <td>{{ pizza.name }}</td>
                <td>{{ pizza.price ~ ' â‚¬'}}</td>
                <td><img src="{{ asset('uploads/' ~ pizza.picture) }}" width="100" height="80" alt="pizza ~ {{ pizza.name}}" /></td>
                <td>
                    <a href="{{ path('app_pizza_show', {'id': pizza.id}) }}">show</a>
                    <a href="{{ path('app_pizza_edit', {'id': pizza.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="ml-2 btn btn-white btn-outline-white" href="{{ path('app_pizza_new') }}">Create new</a>
{% endblock %}
