{% extends 'base.html.twig' %}

{% block title %}Pizza index{% endblock %}

{% block body %}
        <section class="ftco-section">
            <div class="container">
                <div class="row justify-content-center mb-5 pb-3">
                    <div class="col-md-7 heading-section ftco-animate text-center">
                        <h2 class="mb-4">Liste des pizzas</h2>
                        <p class="flip"><span class="deg1"></span><span class="deg2"></span><span class="deg3"></span></p>
                    </div>
                </div>
                
                <a class="btn btn-white btn-outline-white mb-5" href="{{ path('app_pizza_new') }}">Cr√©er une nouvelle pizza</a>

                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nom</th>
                            <th>Prix</th>
                            <th>Photo</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for pizza in pizzas %}
                        <tr>
                            <td>{{ pizza.id }}</td>
                            <td>{{ pizza.name }}</td>
                            <td>{{ pizza.price ~ ' ‚Ç¨'}}</td>
                            <td><img src="{{ asset('uploads/' ~ pizza.picture) }}" width="100" height="80" alt="pizza ~ {{ pizza.name}}" /></td>
                            <td>
                                <a href="{{ path('app_pizza_show', {'id': pizza.id}) }}" style="font-size: 20px; margin-right: 5px;">üëÅ</a>
                                <a href="{{ path('app_pizza_edit', {'id': pizza.id}) }}" style="font-size: 20px;">‚úí</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">Pas de cr√©ation encore</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </section>
{% endblock %}
