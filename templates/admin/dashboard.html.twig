{% extends 'base.html.twig' %}

{% block title %}Tableau de board{% endblock %}

{% block body %}

<section class="ftco-section">
      	<div class="row justify-content-center mb-5 pb-3">
          <div class="col-md-6 heading-section ftco-animate text-center">
            <h2 class="mb-4">Tableau de board</h2>
            <p class="flip"><span class="deg1"></span><span class="deg2"></span><span class="deg3"></span></p>
          </div>
        </div>
        <div class="row">
        	<div class="col-lg-6 justify-content-center d-flex ftco-animate">
        		<div class="staff">
      				<div class="img mb-4"></div>
      				<div class="info text-center">
      					<h3><a href="{{ path('app_pizza_index') }}">Nombre total de nos pizzas</a></h3>
      					<span class="position" style="font-size: 70px">{{total_pizzas}}</span>
      				</div>
        		</div>
        	</div>
        	<div class="col-lg-6 justify-content-center d-flex ftco-animate">
        		<div class="staff">
      				<div class="img mb-4"><i class="fa fa-cutlery" aria-hidden="true"></i></div>
      				<div class="info text-center">
      					<h3><a href="{{ path('app_ingredient_index') }}">Nombre total des ingredients</a></h3>
      					<span class="position" style="font-size: 70px">{{total_ingredients}}</span>
      				</div>
        		</div>
        	</div>
        </div>
</section>
    
{% endblock %}
